<?xml version="1.0" encoding="utf-8" ?>
<Grid
    x:Class="PracticalShooterApp.Templates.NavigationListTemplate"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:button="clr-namespace:Syncfusion.XForms.Buttons;assembly=Syncfusion.Buttons.XForms"
    xmlns:viewModel="clr-namespace:PracticalShooterApp.ViewModels"
    x:Name="NavigationListItem">

    <Grid
        BackgroundColor="{StaticResource PrimaryDark}"
        ColumnDefinitions="120, *"
        ColumnSpacing="0"
        RowSpacing="0">

        <!--  Image to display the Item  -->
        <Image
            Aspect="AspectFill"
            BackgroundColor="{DynamicResource Gray-200}"
            HeightRequest="120"
            WidthRequest="120">
            <Image.Source>
                <UriImageSource
                    CacheValidity="14"
                    CachingEnabled="true"
                    Uri="{Binding ItemImage}" />
            </Image.Source>
        </Image>
        <StackLayout
            Grid.Column="1"
            Padding="16"
            HorizontalOptions="FillAndExpand"
            Spacing="0"
            VerticalOptions="FillAndExpand">

            <!--  Name of the item  -->
            <Label
                HorizontalOptions="Start"
                HorizontalTextAlignment="Start"
                Style="{StaticResource TitleLabelStyle}"
                Text="{Binding ItemName}" />

            <!--  Description about the item  -->
            <Label
                Margin="0,4,0,8"
                FontSize="12"
                HorizontalOptions="Start"
                HorizontalTextAlignment="Start"
                LineBreakMode="TailTruncation"
                LineHeight="{OnPlatform Android=1.25,
                                        Default=-1}"
                MaxLines="5"
                Style="{StaticResource DescriptionLabelStyle}"
                Text="{Binding ItemDescription}" />

